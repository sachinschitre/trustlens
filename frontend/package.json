{
  "name": "trustlens-frontend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "contract:compile": "aeproject build",
    "contract:deploy": "node ../../deploy.js",
